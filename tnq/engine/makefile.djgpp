#
# General and compiler variables
#

ifndef VERBOSE
	MAKEFLAGS+=-s
endif

SHELL=/bin/sh

CC=gcc
LD=gcc
AS=gcc -x assembler-with-cpp

RM=rm -f

CFLAGS=\
	-DDOSQUAKE \
	-O9 \
	-march=i586 \
	-Wall \
	-fomit-frame-pointer \
	-ffast-math \
	-fno-unroll-loops \
	-fno-inline-functions
LDFLAGS=
CSTUB=
LIBS=-lc -lgcc -lm -lalleg 

ifdef DEBUG
	CFLAGS+=\
		-gstabs+3 \
 		-O0 \
 		-fno-omit-frame-pointer \
 		-fno-fast-math
	OBJDIR=debug_dos
else
	CFLAGS+=-DNDEBUG
	LDFLAGS+=-s
	OBJDIR=release_dos
endif

